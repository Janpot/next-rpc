{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "checkJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "rootDir": "lib",
    "outDir": "dist"
  },
  "exclude": ["node_modules", "test/__fixtures__"],
  "include": ["lib/**/*"]
}
